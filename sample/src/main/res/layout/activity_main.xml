<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="nameData"
            type="com.mooveit.fakeit.models.NameData"/>

        <variable
            name="businessData"
            type="com.mooveit.fakeit.models.BusinessData"/>

        <variable
            name="addressData"
            type="com.mooveit.fakeit.models.AddressData"/>
    </data>

    <RelativeLayout
        android:id="@+id/activity_main"
        style="@style/Base.ContainerFullPadded"
        tools:context="com.mooveit.fakeit.MainActivity">

        <TextView
            android:id="@+id/full_name_label"
            style="@style/Base.Wrapper.Bold"
            android:text="@string/full_name"/>

        <TextView
            android:id="@+id/full_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_toRightOf="@+id/first_name_label"
            android:text="@{nameData.fullName}"/>

        <TextView
            android:id="@+id/full_middle_name_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/full_name_label"
            android:text="@string/full_middle_name"/>

        <TextView
            android:id="@+id/full_middle_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/full_name"
            android:layout_toRightOf="@+id/full_middle_name_label"
            android:text="@{nameData.fullMiddleName}"/>

        <TextView
            android:id="@+id/first_name_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/full_middle_name_label"
            android:text="@string/first_name"/>

        <TextView
            android:id="@+id/first_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/full_middle_name"
            android:layout_toRightOf="@+id/first_name_label"
            android:text="@{nameData.firstName}"/>

        <TextView
            android:id="@+id/last_name_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/first_name_label"
            android:text="@string/last_name"/>

        <TextView
            android:id="@+id/last_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/first_name"
            android:layout_toRightOf="@+id/last_name_label"
            android:text="@{nameData.lastName}"/>

        <TextView
            android:id="@+id/title_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/last_name_label"
            android:text="@string/title"/>

        <TextView
            android:id="@+id/title"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/last_name"
            android:layout_toRightOf="@+id/title_label"
            android:text="@{nameData.title}"/>

        <TextView
            android:id="@+id/user_name_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/title_label"
            android:text="@string/user_name"/>

        <TextView
            android:id="@+id/user_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/user_name_label"
            android:text="@{nameData.userName}"/>

        <View
            android:id="@+id/separator_1"
            style="@style/Base.Separator"
            android:layout_below="@+id/user_name_label"/>

        <TextView
            android:id="@+id/business_name_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/separator_1"
            android:text="@string/business_name"/>

        <TextView
            android:id="@+id/business_name"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/separator_1"
            android:layout_toRightOf="@+id/business_name_label"
            android:text="@{businessData.businessName}"/>

        <TextView
            android:id="@+id/business_type_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/business_name_label"
            android:text="@string/business_type"/>

        <TextView
            android:id="@+id/business_type"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/business_name_label"
            android:layout_toRightOf="@+id/business_type_label"
            android:text="@{businessData.businessType}"/>

        <TextView
            android:id="@+id/business_subtype_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/business_type"
            android:text="@string/business_subtype"/>

        <TextView
            android:id="@+id/business_subtype"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/business_type"
            android:layout_toRightOf="@+id/business_subtype_label"
            android:text="@{businessData.businessSubType}"/>

        <View
            android:id="@+id/separator_2"
            style="@style/Base.Separator"
            android:layout_below="@+id/business_subtype_label"/>

        <TextView
            android:id="@+id/address_city_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/separator_2"
            android:text="@string/address_city"/>

        <TextView
            android:id="@+id/address_city"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/separator_2"
            android:layout_toRightOf="@+id/address_city_label"
            android:text="@{addressData.city}"/>

        <TextView
            android:id="@+id/address_street_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_city"
            android:text="@string/address_street"/>

        <TextView
            android:id="@+id/address_street"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_city"
            android:layout_toRightOf="@+id/address_street_label"
            android:text="@{addressData.streetAddress}"/>

        <TextView
            android:id="@+id/address_building_number_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_street_label"
            android:text="@string/address_building_number"/>

        <TextView
            android:id="@+id/address_building_number"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_street_label"
            android:layout_toRightOf="@+id/address_building_number_label"
            android:text="@{addressData.buildingNumber}"/>

        <TextView
            android:id="@+id/address_zip_code_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_building_number_label"
            android:text="@string/address_zip_code"/>

        <TextView
            android:id="@+id/address_zip_code"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_building_number_label"
            android:layout_toRightOf="@+id/address_zip_code_label"
            android:text="@{addressData.zipCode}"/>

        <TextView
            android:id="@+id/address_state_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_zip_code_label"
            android:text="@string/address_state"/>

        <TextView
            android:id="@+id/address_state"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_zip_code_label"
            android:layout_toRightOf="@+id/address_state_label"
            android:text="@{addressData.state}"/>

        <TextView
            android:id="@+id/address_state_abbreviation_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_state"
            android:text="@string/address_state_abbreviation"/>

        <TextView
            android:id="@+id/address_state_abbreviation"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_state"
            android:layout_toRightOf="@+id/address_state_abbreviation_label"
            android:text="@{addressData.stateAbbreviation}"/>

        <TextView
            android:id="@+id/address_latitude_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_state_abbreviation_label"
            android:text="@string/address_latitude"/>

        <TextView
            android:id="@+id/address_latitude"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_state_abbreviation_label"
            android:layout_toRightOf="@+id/address_latitude_label"
            android:text="@{addressData.latitude}"/>

        <TextView
            android:id="@+id/address_longitude_label"
            style="@style/Base.Wrapper.Bold"
            android:layout_below="@+id/address_latitude_label"
            android:text="@string/address_longitude"/>

        <TextView
            android:id="@+id/address_longitude"
            style="@style/Base.Wrapper.MarginLeft"
            android:layout_below="@+id/address_latitude_label"
            android:layout_toRightOf="@+id/address_longitude_label"
            android:text="@{addressData.longitude}"/>

        <Button
            android:id="@+id/refresh"
            style="@style/Base.Wrapper"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="refresh"
            android:text="@string/refresh"/>
    </RelativeLayout>
</layout>
